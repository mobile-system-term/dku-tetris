<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/dipSwitchValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dip Switch: ---"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/readDipSwitchBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Dip Switch"/>

    <Button
        android:id="@+id/buzzerOnBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buzzer ON"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buzzerOffBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buzzer OFF"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/writeLcdBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write Text LCD"
        android:layout_marginTop="16dp"/>

</LinearLayout>
